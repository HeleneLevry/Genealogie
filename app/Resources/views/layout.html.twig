{# app/Resources/views/layout.html.twig #}

<!DOCTYPE HTML>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{% block title %}Disease Memory{% endblock %}</title>
		
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" />
		{% endblock %}
	</head>
	
	<body>
		<div class="container">
			<div id="header" class="hero-unit">
				<h1> Disease Memory </h1>
				<p> Le site qui vous aide à garder un oeil sur votre santé ! </p>
				
			</div>
			<div class="row">
				<div id="menu" class="span3">
					{{ render(controller("UserBundle:User:menu")) }}
				</div>
				<div id="content" class="span9">
					{% block body %}
					{% endblock %}
				</div>
			</div>
			
			<hr>
			
			<footer>
				<!--<p>The sky's the limit. </p> -->
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
				Connecté en tant que {{ app.user.username }}
				<br/>
				<a href="{{path('fos_user_security_logout') }}">Déconnexion</a>
				{% else %}
				<a href="{{ path ('fos_user_security_login') }}">Connexion</a>
				{% endif %}
			</footer>
		</div>
		
	{% block javascripts %}
		{# Bootstrap Twitter #}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
		<script type="text/javascript" scr="{{ asset('js/bootstrap.js') }}"></script>
	{% endblock %}	
	
	
		
	</body>
</html>
